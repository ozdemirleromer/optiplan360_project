# OptiPlan 360 Environment Variables

# Database
DATABASE_URL=sqlite:///./optiplan360.db

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (for existing features)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API (AI Assistant)
GEMINI_API_KEY=your-gemini-api-key

# Azure Services (OCR, Blob Storage)
AZURE_OCR_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_OCR_KEY=your-azure-ocr-key
AZURE_BLOB_CONNECTION_STRING=your-blob-connection-string

# Google Cloud Vision
GOOGLE_CLOUD_CREDENTIALS=path/to/google-credentials.json

# AWS Textract
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-token

# Mikro SQL Integration
MIKRO_DB_HOST=localhost
MIKRO_DB_PORT=1433
MIKRO_DB_INSTANCE=
MIKRO_DB_DATABASE=MikroDB
MIKRO_DB_USERNAME=sa
MIKRO_DB_PASSWORD=your-mikro-password

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,csv

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
